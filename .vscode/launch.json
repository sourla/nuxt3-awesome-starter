  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Client: Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },{
      "type": "node",
      "request": "launch",
      "name": "Server: Node",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"], // dev:local로 변경
      "skipFiles": ["<node_internals>/**"]
    }
  ],  "compounds": [
  {
    "name": "Full Stack: Nuxt + Node",
    "configurations": ["Server: Node",  "Client: Chrome"]
  }
]
}
